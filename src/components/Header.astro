<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-xl shadow-sm border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/LOGOFECSLOGANVERDE.png"
          alt="Ferretería El Carmen"
          class="h-14 w-auto object-contain transition-all group-hover:scale-105"
        />
        <div class="hidden sm:block">
          <div class="text-xl font-bold text-gray-900">Ferretería</div>
          <div class="text-sm text-[#007AFF] font-semibold">El Carmen</div>
        </div>
      </a>

      <!-- Navegación Desktop -->
      <div class="hidden md:flex items-center gap-1">
        <a href="#productos" class="px-4 py-2 text-gray-700 hover:text-black font-medium rounded-lg hover:bg-gray-100 transition-all">
          Productos
        </a>
        <a href="/catalogo" class="px-4 py-2 text-gray-700 hover:text-black font-medium rounded-lg hover:bg-gray-100 transition-all">
          Catálogo
        </a>
        <a href="#servicios" class="px-4 py-2 text-gray-700 hover:text-black font-medium rounded-lg hover:bg-gray-100 transition-all">
          Servicios
        </a>
        <a href="#sobre-nosotros" class="px-4 py-2 text-gray-700 hover:text-black font-medium rounded-lg hover:bg-gray-100 transition-all">
          Nosotros
        </a>
        <a href="#ubicaciones" class="px-4 py-2 text-gray-700 hover:text-black font-medium rounded-lg hover:bg-gray-100 transition-all">
          Ubicaciones
        </a>
        <a href="#contacto" class="ml-2 px-6 py-2.5 bg-[#007AFF] hover:bg-[#0051D5] text-white font-semibold rounded-xl transition-all shadow-md hover:shadow-lg">
          Contacto
        </a>
      </div>

      <!-- Botón Menú Móvil -->
      <button id="mobile-menu-button" class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg hover:bg-gray-100 transition-all">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Menú Móvil -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2 bg-white rounded-2xl shadow-xl p-4 mt-2">
        <a href="#productos" class="px-4 py-3 text-gray-700 hover:text-black hover:bg-gray-50 font-medium rounded-lg transition-all">
          Productos
        </a>
        <a href="/catalogo" class="px-4 py-3 text-gray-700 hover:text-black hover:bg-gray-50 font-medium rounded-lg transition-all">
          Catálogo
        </a>
        <a href="#servicios" class="px-4 py-3 text-gray-700 hover:text-black hover:bg-gray-50 font-medium rounded-lg transition-all">
          Servicios
        </a>
        <a href="#sobre-nosotros" class="px-4 py-3 text-gray-700 hover:text-black hover:bg-gray-50 font-medium rounded-lg transition-all">
          Nosotros
        </a>
        <a href="#ubicaciones" class="px-4 py-3 text-gray-700 hover:text-black hover:bg-gray-50 font-medium rounded-lg transition-all">
          Ubicaciones
        </a>
        <a href="#contacto" class="px-4 py-3 bg-[#007AFF] hover:bg-[#0051D5] text-white font-semibold rounded-lg transition-all text-center mt-2">
          Contacto
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Cerrar menú al hacer clic en un enlace
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Cambiar header al hacer scroll
  let lastScroll = 0;
  const header = document.querySelector('header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 100) {
      header?.classList.add('shadow-md');
    } else {
      header?.classList.remove('shadow-md');
    }

    lastScroll = currentScroll;
  });
</script>

